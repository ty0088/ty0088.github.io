Resources:
  AWSEBAutoScalingGroup:
    Metadata:
      AWS::CloudFormation::Authentication:
        S3Auth:
          type: "s3"
          buckets: ["blog-spot-api-s3"]
          roleName: "aws-elasticbeanstalk-ec2-role"

files:
  "/tmp/blog-api-secrets.json" :
    mode: "000644"
    owner: root
    group: root
    authentication: "S3Auth"
    source: https://blog-spot-api-secrets-eu-west-2.s3.eu-west-2.amazonaws.com/blog-api-secrets.json


container_commands:
  file_transfer_1:
    command: "mkdir -p storage"
  file_transfer_2:
    command: "mv /tmp/blog-api-secrets.json storage"